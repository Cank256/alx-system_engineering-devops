#!/usr/bin/env bash
# This script displays "Best School" 10 times, with a special case on the 9th iteration.

# Initialize a counter
count=1

# Use a while loop to display "Best School" 10 times
while [ $count -le 10 ]
do
    # Check if it's the 9th iteration
    if [ $count -eq 9 ]
    then
        echo "Best School"
        echo "Hi"
    else
        echo "Best School"
    fi
    
    # Increment the counter
    count=$((count + 1))
done
